<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="我的"
            android:textSize="60sp"
            android:textColor="#0A0A0A"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_message"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="1200px"
        android:layout_marginTop="50px"
        android:background="@drawable/ic_message_black_24dp" />

    <TextView
        android:layout_marginTop="88dp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#9FA3A5"></TextView>

    <TextView
        android:layout_marginTop="230dp"
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:background="#9FA3A5"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_favourite"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_favorite_black_24dp"/>

        <Button
            android:id="@+id/btn_history"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/ic_access_time_black_24dp"/>

        <Button
            android:id="@+id/btn_note"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="65dp"
            android:background="@drawable/ic_mode_edit_black_24dp"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="360dp"
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:background="#9FA3A5"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="30dp">

        <View
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_error_outline_black_24dp"/>

        <TextView
            android:id="@+id/text_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="帮助与反馈"
            android:textSize="30sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_set"
        android:layout_marginTop="442dp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#9FA3A5"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="462dp"
        android:layout_marginLeft="30dp">

        <View
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_brightness_5_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="设置"
            android:textSize="30sp"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="520dp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#9FA3A5"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_home_black_24dp"/>

        <Button
            android:id="@+id/btn_book"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="88dp"
            android:background="@drawable/ic_library_books_black_24dp" />

        <Button
            android:id="@+id/btn_person"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="77dp"
            android:background="@drawable/ic_person_black_24dp" />

    </LinearLayout>


</RelativeLayout>